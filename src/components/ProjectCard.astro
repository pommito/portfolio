---
import { Image } from "astro:assets";

import logo from "@/assets/Logo_3D.png"

type Props = {
  title: string;
  description: string;
  illustration: ImageMetadata;
  link: string;
}

const { title, description, illustration = logo, link } = Astro.props as Props;

---

<div class="relative flex items-center rounded-xl gap-2 p-2 -ml-2 transition-all ease-in duration-300 group-hover:not-hover:opacity-20 group-hover:has-hover:scale-102 sm:gap-4">
  <div class="size-12 bg-neutral-200 dark:bg-neutral-800 flex items-center justify-center rounded-lg ">
    <Image src={illustration} alt="Logo de Victor Lebecq" width="100" height="100" class="size-4 object-cover object-center" />
  </div>
  <div class="flex-1">
    <h3 class="">
      <a href={link}>
        <span class="absolute inset-0 z-10"></span>
        {title}
      </a>
    </h3>
    <p class="!mt-0 text-sm">{description}</p>
  </div>
</div>