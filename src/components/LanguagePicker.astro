---
import { languages } from '../i18n/ui';
import { getLangFromUrl, getRouteFromUrl,  useTranslatedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const route = getRouteFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);

---
<ul class="flex gap-1 uppercase">
  {Object.entries(languages).map(([lang, label], index) => (
    <>
      <li>
          <a href={translatePath(`/${route ? route : ''}`, lang)} class="hover:text-neutral-100 transition-colors ease-out">{lang === 'fr' ? 'ğŸ‡«ğŸ‡·' : 'ğŸ‡¬ğŸ‡§'}</a>
      </li>
      {index < Object.entries(languages).length - 1 && ' / '}
    </>
  ))}
</ul>
