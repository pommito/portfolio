---
import { Image } from "astro:assets";

import logo from "@/assets/Logo_3D.png"
import LauncherButton from "./Launcher/LauncherButton.astro";

---
<header class="mb-16 sm:mb-32">
  <div class="flex items-center justify-between">
    <a href="/" class="">
      <Image src={logo} alt="Logo de Victor Lebecq" width="100" height="100" class="size-6 object-cover object-center" />
    </a>
    <nav>
      <ul class="flex items-center gap-3 text-base/4 sm:gap-4">
        <li class="p-1">
          <LauncherButton />
        </li>
        <li class="p-1">
          <a href="/about" aria-label="Aller sur la page a propos">
            <span>A propos</span>
          </a>
        </li>
        <li class="p-1">
          <a href="/blog" aria-label="Aller sur le blog">
            <span>Blog</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>



