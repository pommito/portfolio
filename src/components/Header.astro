---
import { Image } from "astro:assets";
import LauncherButton from "./Launcher/LauncherButton.astro";
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';

import logo from "@/assets/Logo_3D.png"

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

---
<header class="mb-16 sm:mb-32">
  <div class="flex items-center justify-between">
    <a href={translatePath('/', lang)} class="">
      <Image src={logo} alt="Logo de Victor Lebecq" width="100" height="100" class="size-6 object-cover object-center" />
    </a>
    <nav>
      <ul class="flex items-center gap-3 text-base/4 sm:gap-4">
        <li class="p-1">
          <LauncherButton />
        </li>
        <li class="p-1">
            <a href={translatePath('/a-propos/', lang)} aria-label="Aller sur la page a propos">
              <span>{t('nav.about')}</span>
            </a>
        </li>
        <li class="p-1">
          <a href={translatePath('/blog/', lang)} aria-label="Aller sur le blog">
            <span>Blog</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>
